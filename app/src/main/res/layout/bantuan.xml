<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".Bantuan">

    <TextView
            android:id="@+id/text1"
            android:text="1. Muncul Pop Up Nomor Telepon tidak
     terdaftar "
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="@color/putih"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/text2"
            android:text="...Menunjukkan bahwa Nomor tidak terdaftar di Aplikasi Whatsapp"
            android:textColor="@color/putih"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
    android:id="@+id/text3"
    android:text="2. Kegunaan Aplikasi "
    android:textSize="17dp"
    android:textStyle="bold"
    android:textColor="@color/putih"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="16dp"
    android:layout_below="@id/text2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/text4"
            android:text="...Aplikasi dirancang untuk mengirim pesan melalui Whatsapp tanpa perlu menyimpan nomor ke dalam
kontak telepon pengguna. "
            android:textColor="@color/putih"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/text5"
            android:text="3. Petunjuk Penggunaan "
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/putih"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_below="@id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/text6"
            android:text="...Masukkan No Telepon yang diawali dengan kode telepon negara.  Ex : 628,  911."
            android:textColor="@color/putih"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/text7"
            android:text="4. Tim Pengembang "
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/putih"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_below="@id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:src="@drawable/ltipng"
            android:layout_marginTop="200dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/web"

            android:textColor="@color/putih"
            android:layout_below="@+id/text7"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>